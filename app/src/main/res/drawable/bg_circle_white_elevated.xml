<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Circle background for the recenter button -->
    <solid android:color="@android:color/white" />

    <!-- Make it circular by using a big radius -->
    <corners android:radius="999dp" />

    <!-- Light border so it stands out on the map -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Small internal padding -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>

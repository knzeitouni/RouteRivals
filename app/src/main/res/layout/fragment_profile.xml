<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="32dp"
    android:paddingBottom="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/textProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Avatar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAvatar"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="55dp"
        app:cardUseCompatPadding="false"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/textProfileTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:background="@color/purple_700"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_launcher" />
    </androidx.cardview.widget.CardView>

    <!-- Account Info Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAccountInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="18dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/textAccountHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Information"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/purple_700"
                android:layout_marginBottom="12dp" />

            <!-- Name row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textSize="16sp"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/textUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="test"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Email row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textSize="16sp"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/textUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="test@gmail.com"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Log out button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="LOG OUT"
        android:textAllCaps="true"
        android:textSize="16sp"
        app:cornerRadius="24dp"
        app:backgroundTint="@color/purple_700"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/cardAccountInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Delete profile button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonDeleteProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="DELETE PROFILE"
        android:textAllCaps="true"
        android:textSize="16sp"
        app:cornerRadius="24dp"
        app:backgroundTint="#C62828"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/buttonLogout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
